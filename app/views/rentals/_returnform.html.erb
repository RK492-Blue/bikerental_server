<%= form_with(model: rental, local: true) do |form| %>
  <% if rental.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rental.errors.count, "error") %> prohibited this rental from being saved:</h2>

      <ul>
      <% rental.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :bike_id %>
    <%= form.number_field :bike_id, id: :rental_bike_id %> <%# has to show the logged in's bike. Current.user.bike?  %>
  </div>


  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, id: :rental_end_time %> <%# add a Time.now option %>
  </div>


  <div class="field">
    <%= form.label :end_station %>
    <%= form.select :end_stand_id, Bikestand.pluck(:location, :id), :include_blank => true %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.number_field :cost, id: :rental_cost %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
