
<p id="notice"><%= notice %></p>
<% if @current_user.present? && @current_user.user_type == 'admin' %>
      <h1>Users</h1>
      <br>
      <div class="button"><%= link_to 'Create User', new_user_path %></div>
      <div class="container-table100">
        <div class="wrap-table100">
          <div class="table100">
      <table>
        <thead>
          <tr class="row100 head">
            <!-- <th class="column100 column1">User ID</th> -->
            <th class="column100 column2">Name</th>
            <th class="column100 column3">User type</th>
            <th class="column100 column4">Email</th>
            <th class="column100 column5" colspan="2">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr class="row100">
              <!-- <td class="column100 column1"><%= user.id %></td> -->
              <td class="column100 column2"><%= link_to "#{user.name}", user %></td>
              <td class="column100 column3"><%= user.user_type %></td>
              <td class="column100 column4"><%= user.email %></td>
              <td class="column100 column5"><%= link_to 'Edit', edit_user_path(user) %></td>
              <td class="column100 column6"><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <%end %>
        </table>
      </div>
    </div>
  </div>

    <% else %>
    <h1>Profile</h1>
    <div class="container-table100">
      <div class="wrap-table100">
        <div class="table100">
    <table>
      <thead>
        <tr class="row100 head">
          <th class="column100 column1">Name</th>
          <th class="column100 column2">Email</th>
          <th class="column100 column3">Settings</th>
        </tr>
      </thead>

      <tbody>
        <% @rental_user.each do |user| %>
          <tr class="row100">
            <td class="column100 column1"><%= user.name %></td>
            <td class="column100 column2"><%= user.email %></td>
            <td class="column100 column3"><%= link_to 'Edit', edit_user_path(user) %></td>
          </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>
<div class="push"></div>
<% end %>
